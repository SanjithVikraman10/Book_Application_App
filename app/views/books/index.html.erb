<h1>Books</h1>
<%= link_to 'New Book', new_book_path, class: 'btn btn-primary mb-3' %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Published Date</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.genre %></td>
          <td>$<%= number_with_precision(book.price, precision: 2) %></td>
          <td><%= book.published_date %></td>
          <td><%= link_to 'Show', book, class: 'btn btn-info btn-sm mr-1' %></td>
          <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-sm mr-1' %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mr-1' %>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>

